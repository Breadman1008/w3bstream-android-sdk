<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/AppTheme.buttonStyle</item>
    </style>

    <style name="AppTheme.buttonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="LoadingDialogStyle" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>