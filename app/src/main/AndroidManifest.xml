<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.iotex.pebble"
    tools:ignore="LockedOrientationActivity">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".app.PebbleApp"
        android:allowBackup="true"
        android:exported="false"
        android:icon="@mipmap/ic_pebble_large"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_pebble_large"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pebbleandroid">

        <service android:name="org.eclipse.paho.android.service.MqttService" />

        <activity
            android:name=".pages.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.DevicePanelActivity"
            android:label="@string/device"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pages.AboutActivity"
            android:label="@string/about"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pages.SettingActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pages.HistoryActivity"
            android:label="@string/history"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pages.CreateActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>