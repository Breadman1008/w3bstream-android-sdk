<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginTop="12dp"
    android:background="@mipmap/bg_item_nft_unactivated"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <FrameLayout
        android:id="@+id/mFlNftLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mIvNftLogo"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_nft" />

        <ImageView
            android:id="@+id/mIvMark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_activated"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/mTvNftLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/space_grotesk_light"
        android:text="Meta-Pebble NFT"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/mFlNftLogo"
        app:layout_constraintTop_toTopOf="@+id/mFlNftLogo" />

    <ImageView
        android:id="@+id/mIvArrow"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="@+id/mTvNftLabel"
        app:layout_constraintStart_toEndOf="@+id/mTvNftLabel"
        app:layout_constraintTop_toTopOf="@+id/mTvNftLabel" />

    <TextView
        android:id="@+id/mTvNftNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/space_grotesk_light"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/mTvNftLabel"
        app:layout_constraintTop_toBottomOf="@+id/mTvNftLabel"
        tools:text="NO.283" />

    <FrameLayout
        android:id="@+id/mFlSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/mRBtnSelect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/selector_nft_select"
            android:button="@null"
            android:clickable="false"
            android:checked="false" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>