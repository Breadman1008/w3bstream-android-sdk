<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@color/black_alpha_10"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:id="@+id/mTvTime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/space_grotesk_light"
        android:textColor="@color/white_alpha_70"
        android:textSize="14sp"
        tools:text="2022-2-10 13:12:12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/space_grotesk_regular"
                android:text="LAT:"
                android:textColor="@color/white_alpha_70"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mTvLat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:fontFamily="@font/space_grotesk_regular"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="106.49478" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/space_grotesk_regular"
                android:text="LONG:"
                android:textColor="@color/white_alpha_70"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mTvLong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:fontFamily="@font/space_grotesk_regular"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="106.49478" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>