<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <include layout="@layout/include_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black_alpha_20"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/mIvGps"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_gps" />

        <TextView
            android:id="@+id/mTvGps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/mIvGps"
            android:fontFamily="@font/space_grotesk_light"
            android:text="@string/gps"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.suke.widget.SwitchButton
            android:id="@+id/mSbGps"
            android:layout_width="45dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:sb_background="@color/teal_800"
            app:sb_checked="true"
            app:sb_checked_color="@color/green_400"
            app:sb_checkline_width="0dp"
            app:sb_show_indicator="false"
            app:sb_uncheck_color="@color/teal_800" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mRlFrequency"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@color/black_alpha_20"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/mIvFrequencyIcon"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_frequency" />

        <TextView
            android:id="@+id/mTvFrequencyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/mIvFrequencyIcon"
            android:fontFamily="@font/space_grotesk_light"
            android:text="@string/gps_collection_interval"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mTvFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/mTvFrequencyArrow"
            android:fontFamily="@font/space_grotesk_light"
            android:textColor="@color/green_400"
            android:textSize="14sp"
            tools:text="5 mins" />

        <ImageView
            android:id="@+id/mTvFrequencyArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_forward" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mRlGpsPrecision"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@color/black_alpha_20"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/mIvGpsPrecisionIcon"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_precision" />

        <TextView
            android:id="@+id/mTvGpsPrecisionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/mIvGpsPrecisionIcon"
            android:fontFamily="@font/space_grotesk_light"
            android:text="@string/gps_precision"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mTvGpsPrecision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/mIvGpsPrecisionArrow"
            android:fontFamily="@font/space_grotesk_light"
            android:textColor="@color/green_400"
            android:textSize="14sp"
            tools:text="Fine(~100m)" />

        <ImageView
            android:id="@+id/mIvGpsPrecisionArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_forward" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/black_alpha_20"
        android:orientation="vertical"
        android:paddingTop="13dp"
        android:paddingBottom="17dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <ImageView
                android:id="@+id/mIvSererIcon"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_server_url" />

            <TextView
                android:id="@+id/mTvServerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/mIvSererIcon"
                android:fontFamily="@font/space_grotesk_light"
                android:text="@string/w3bstream_server"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.suke.widget.SwitchButton
                android:id="@+id/mSbServer"
                android:layout_width="45dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:sb_background="@color/teal_800"
                app:sb_checked="true"
                app:sb_checked_color="@color/green_400"
                app:sb_checkline_width="0dp"
                app:sb_show_indicator="false"
                app:sb_uncheck_color="@color/teal_800" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp">

            <LinearLayout
                android:id="@+id/mLlServerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/space_grotesk_light"
                        android:includeFontPadding="false"
                        android:text="@string/https_url"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/mLlHttpsRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/space_grotesk_regular"
                            android:includeFontPadding="false"
                            android:text="@string/reset_default"
                            android:textColor="@color/green_400"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="4dp"
                            android:src="@mipmap/ic_refresh" />

                    </LinearLayout>

                </RelativeLayout>

                <EditText
                    android:id="@+id/mEtHttps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/shape_white_a8_r4"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/white_alpha_70"
                    android:textSize="14sp"
                    tools:text="http://test-http.orender" />

                <TextView
                    android:id="@+id/mTvHttpsError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/space_grotesk_light"
                    android:text="@string/url_invalid"
                    android:textColor="@color/red_700"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mLlHttpsPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/space_grotesk_light"
                    android:includeFontPadding="false"
                    android:text="@string/https_url"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTvHttpsPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/mIvHttpsReset"
                        android:ellipsize="end"
                        android:fontFamily="@font/space_grotesk_regular"
                        android:maxLines="1"
                        android:textColor="@color/white_alpha_70"
                        android:textSize="14sp"
                        tools:text="http://test-http.orenderhttp://test-http.orender" />

                    <ImageView
                        android:id="@+id/mIvHttpsReset"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:adjustViewBounds="true"
                        android:padding="4dp"
                        android:src="@drawable/ic_edit" />

                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp">

            <LinearLayout
                android:id="@+id/mLlSocketInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/space_grotesk_light"
                        android:includeFontPadding="false"
                        android:text="@string/socket_url"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/mLlSocketRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/space_grotesk_regular"
                            android:includeFontPadding="false"
                            android:text="@string/reset_default"
                            android:textColor="@color/green_400"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="4dp"
                            android:src="@mipmap/ic_refresh" />

                    </LinearLayout>

                </RelativeLayout>

                <EditText
                    android:id="@+id/mEtSocket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/shape_white_a8_r4"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/white_alpha_70"
                    android:textSize="14sp"
                    tools:text="http://test-http.orender" />

                <TextView
                    android:id="@+id/mTvSocketError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/space_grotesk_light"
                    android:text="@string/url_invalid"
                    android:textColor="@color/red_700"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mLlSocketPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/space_grotesk_light"
                    android:includeFontPadding="false"
                    android:text="@string/websocket_url"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="26dp">

                    <TextView
                        android:id="@+id/mTvSocketPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/mIvSocketReset"
                        android:ellipsize="end"
                        android:fontFamily="@font/space_grotesk_regular"
                        android:maxLines="1"
                        android:textColor="@color/white_alpha_70"
                        android:textSize="14sp"
                        tools:text="http://test-http.orenderhttp://test-http.orender" />

                    <ImageView
                        android:id="@+id/mIvSocketReset"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:adjustViewBounds="true"
                        android:padding="4dp"
                        android:src="@drawable/ic_edit" />

                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>